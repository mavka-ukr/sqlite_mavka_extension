взяти біб мавка

sqlite3 = мавка.завантажити_РМв1(ю"./розширення_мавки_sqlite3.so")

db = sqlite3.open(ю"привіт.db")

sqlite3.exec(db, ю"CREATE TABLE IF NOT EXISTS paks (id INTEGER PRIMARY KEY, name TEXT)")
sqlite3.exec(db, ю"INSERT INTO paks (name) VALUES ('привіт')")
sqlite3.exec(db, ю"INSERT INTO paks (name) VALUES ('інтелект')")
sqlite3.exec(db, ю"SELECT * from paks", (рядок): друк(рядок))
