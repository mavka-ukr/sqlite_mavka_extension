взяти біб мавка

sqlite = мавка.завантажити_РМв1(ю"./розширення_мавки_sqlite.so")

db = sqlite.open(ю"привіт.db")

результат = sqlite.exec(db, ю"CREATE TABLE IF NOT EXISTS paks (id INTEGER PRIMARY KEY, name TEXT)")
друк(результат)
результат1 = sqlite.exec(db, ю"INSERT INTO paks (name) VALUES ('привіт')")
друк(результат1)
результат2 = sqlite.exec(db, ю"INSERT INTO paks (name) VALUES ('інтелект')")
друк(результат2)
результат3 = sqlite.exec(db, ю"SELECT * from paks")
друк(результат3)
prepared = sqlite.prepare_v2(db, ю"SELECT * from paks WHERE id = ?")
sqlite.bind_int(prepared, 1, 1)
друк(sqlite.expanded_sql(prepared))
